<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:ShopList.ViewModels"
             xmlns:models="clr-namespace:ShopList.Models"
             x:DataType="viewmodels:MainViewModel"
             x:Class="ShopList.Views.MainPage"
             Title="Lista de compras">
    <Grid
        RowDefinitions="Auto,*"
        ColumnDefinitions="*"
        Margin="8">

        <Grid
            RowDefinitions="*"
            ColumnDefinitions="*,Auto"
            ColumnSpacing="8">

            <Entry
                Placeholder="Agrega un producto"
                Text="{Binding ItemName}"
                ClearButtonVisibility="WhileEditing"
                />
            <Button
                Grid.Column="1"
                Text="+"
                FontSize="Small"
                Command="{Binding AddCommand}"
                />

        </Grid>
        
        <CollectionView
            Grid.Row="1"
            Margin="8,4,8,0"
            EmptyView="Tu lista de compras está vacía"
            ItemsSource="{Binding ShopList}"
            >
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="{x:Type models:ShopListItem}">
                    <Grid
                        Margin="0,3">
                        <Frame
                            CornerRadius="6"
                            Padding="8,4,8,4"
                            BackgroundColor="{StaticResource Primary}"
                            >
                            <Label
                                Text="{Binding Name}"
                                FontSize="Default"
                                TextColor="White"
                                BackgroundColor="{StaticResource Primary}"
                                />
                        </Frame>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>